<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/activity_vertical_margin"
    app:cardElevation="@dimen/activity_vertical_margin">
    <!--app:cardCornerRadius="@dimen/activity_vertical_margin"-->
    <!--android:layout_marginBottom="@dimen/activity_vertical_margin"-->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!--<ImageView-->
        <!--android:id="@+id/imageView"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_alignParentLeft="true"-->
        <!--android:layout_alignParentTop="true"-->
        <!--android:layout_marginRight="16dp" />-->

        <TextView
            android:id="@+id/routeNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:paddingBottom="16dp"
            android:paddingLeft="32dp"
            android:paddingRight="64dp"
            android:paddingTop="16dp"
            android:text="Num"
            android:textColor="@color/white"
            android:textSize="32dp" />

        <TextView
            android:id="@+id/routeNameCardView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@+id/routeNum"
            android:paddingBottom="8dp"
            android:text="Route Name"
            android:textColor="@color/white"
            android:textSize="24dp" />

        <TextView
            android:id="@+id/routeOpDaysCardView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/routeNameCardView"
            android:layout_toRightOf="@+id/routeNum"
            android:textColor="@color/white"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/routeOpHoursCardView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/routeOpDaysCardView"
            android:layout_toRightOf="@+id/routeNum"
            android:text="Route Description"
            android:textColor="@color/white"
            android:textSize="12dp" />
        android:text="Route Description" />

        <TextView
            android:id="@+id/routeNameInCardView"
            android:layout_width="0dp"
            android:layout_height="0dp" />
    </RelativeLayout>


