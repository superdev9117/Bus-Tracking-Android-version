<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="@dimen/activity_vertical_margin">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!--app:cardCornerRadius="@dimen/activity_vertical_margin"-->

        <!--<ImageView-->
        <!--android:id="@+id/alarmImageView"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_alignParentTop="true"-->
        <!--android:layout_alignParentLeft="true"-->
        <!--android:layout_marginRight="16dp"/>-->
        <Switch
            android:id="@+id/alarm_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:paddingLeft="16dp" />

        <TextView
            android:id="@+id/alarmBusRoute"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Route"
            android:textSize="16dp"
            android:textStyle="bold" />
        <!--android:layout_toRightOf="@id/alarmImageView"-->

        <TextView
            android:id="@+id/alarmBusstop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/alarm_switch"
            android:paddingLeft="16dp"
            android:text="Bussstop"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/alarmSettingTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/alarmBusRoute"
            android:text="Setting Time"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/alarmRemainingTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/alarmBusstop"
            android:layout_toLeftOf="@id/alarm_switch"
            android:paddingLeft="16dp"
            android:text="Remaining Time"
            android:textAlignment="center"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/alarm_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/alarm_switch"
            android:layout_alignParentRight="true"
            android:text="Alarm off"/>

        <TextView
            android:id="@+id/routeIDinAlarmItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="-1"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/stopIDInAlarmItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="-1"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/alarmID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="-1"
            android:visibility="invisible" />


    </RelativeLayout>
</android.support.v7.widget.CardView>
